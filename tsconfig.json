{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"rootDir": ".",
		"lib": [ "es6" ],
		"sourceMap": true,
		"composite": true,
		"declaration": true,
		"skipLibCheck": true
	},
	"include": [
		"src", "test"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"references": [
		{ "path": "./client" }
	]
}
